<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_others"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp">

                    <LinearLayout
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_pro_pic"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:background="@drawable/profile"
                            android:padding="@dimen/_5sdp"
                            android:tint="@color/app_color" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/photo_piker_but"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/app_color_circle_shape"
                        android:padding="@dimen/_7sdp"
                        android:src="@drawable/ic_camera"
                        app:tint="@color/white" />

                </RelativeLayout>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:text="Your Name"
                    android:textColor="#003459"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/yourname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_background_shape"
                    android:padding="@dimen/_10sdp"
                    android:hint="your name"
                    android:textColorHint="@color/light_grey"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="8dp"
                    android:text="Mobile Number"
                    android:textColor="#003459"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_background_shape"
                    android:inputType="number"
                    android:padding="@dimen/_10sdp"
                    android:hint="mobile number"
                    android:textColorHint="@color/light_grey"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="8dp"
                    android:text="Email"
                    android:textColor="#003459"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_background_shape"
                    android:padding="@dimen/_10sdp"
                    android:hint="email id"
                    android:textColorHint="@color/light_grey"
                    android:textColor="#000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/Gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="8dp"
                    android:text="Gender"
                    android:textColor="#003459"
                    android:textSize="16dp" />

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_background_shape"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_4sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_25sdp">

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_color"
                            android:text="male" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:background="@drawable/edit_background_shape"
                        android:orientation="vertical"
                        android:paddingVertical="@dimen/_4sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_15sdp">

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/app_color"
                            android:text="female" />
                    </LinearLayout>
                </RadioGroup>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="8dp"
                    android:text="@string/date_of_birth"
                    android:textColor="#003459"
                    android:textSize="16dp" />

                <RelativeLayout
                    android:id="@+id/date_of_birth_lay_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/edit_background_shape"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_13sdp">


                    <TextView
                        android:id="@+id/date_of_birth_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:hint="Date of Birth"
                        android:textColorHint="@color/light_grey"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />


                    <ImageView
                        android:id="@+id/calender_img"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:contentDescription="TODO"
                        android:padding="@dimen/_2sdp"
                        android:src="@drawable/calendar"
                        app:tint="@color/app_color" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/button1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:background="@drawable/app_stoke_background_shape"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_8sdp"
                        android:text="cancel"
                        android:textColor="#03A9F4"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/button2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/save_background"
                        android:gravity="center"
                        android:paddingVertical="@dimen/_8sdp"
                        android:text="save"
                        android:textColor="#fff"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>