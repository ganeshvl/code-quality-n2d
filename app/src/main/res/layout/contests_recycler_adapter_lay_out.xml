<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:paddingVertical="@dimen/_10sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_pro_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_110sdp"
                android:scaleType="fitXY"
                android:src="@color/app_color"
                android:tint="@color/app_color"
                app:riv_corner_radius_top_left="@dimen/_10sdp"
                app:riv_corner_radius_top_right="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heading of the Contest"
                        android:textColor="#000000"
                        android:singleLine="true"
                        android:id="@+id/heading_tx_contests"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_10sdp" />
                    <TextView
                        android:singleLine="true"
                        android:id="@+id/des_tx_contests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heading of the Contest"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/know_more_tx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Know More"
                        android:background="@drawable/bt_background"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    android:id="@+id/share_but"
                    android:src="@drawable/share_new_icon" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>